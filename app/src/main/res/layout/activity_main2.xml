<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main2Activity">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EVIDENCIAS DE ACTIVIDAD"
        android:textSize="30sp" />

    <Button
        android:id="@+id/elegir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Elegir Evidencia" />

    <Button
        android:id="@+id/insertarE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Insertar Evidencia" />

    <Button
        android:id="@+id/regresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regresar" />

    <ImageView
        android:id="@+id/elegirImagen"
        android:layout_width="400dp"
        android:layout_height="291dp"
        android:background="#858282"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/VerEvi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Lista de Evidencia" />


</LinearLayout>